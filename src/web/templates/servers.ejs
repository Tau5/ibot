<!DOCTYPE html>
<html lang="en">
  <head>
    <% include parts/head.ejs %>
    <title>iBot - Servers</title>
  </head>
  <body>
    <!-- Nav-bar -->
    <% include parts/header.ejs %>

    <!-- Servers -->
    <div class="jumbotron jumbotron-fluid">
      <div class="container mx-auto">
        <h1 class="mbr-section-title mbr-bold mbr-fonts-style text-center">Your mutual servers with iBot</h1>
        <hr>
        <div class="row text-center mx-auto" style="vertical-align: 50%;">
          <% mutualGuilds.forEach((guild) => { %>
          <div title="<%= guild.name %>">
            <a href="/server/<%= guild.id %>">
              <img src="rounded-circle" height="75" width="75" src="<%= guild.icon ? `https://cdn.discordapp.com/icons/${g.id}/${g.icon}.png?size=128` : '/images/discord_server.png' %>" alt="">
            </a>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <% include parts/footer.ejs %>
  </body>
</html>